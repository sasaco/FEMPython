{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "_clean",
            "type": "shell",
            "command": "rm",
            "args": ["-rf" ,"${workspaceFolder}/FrontISTR/build"]
        },
        {
            "label": "_mkdir",
            "type": "shell",
            "command": "mkdir",
            "args": ["${workspaceFolder}/FrontISTR/build"],
            "dependsOn": [
                "_clean",
            ],
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "${workspaceFolder}/FrontISTR",
                "-DCMAKE_BUILD_TYPE='Debug'",               // デバッグモードで cmake
                "-DCMAKE_INSTALL_PREFIX=/usr/local/bin"     // fistr1のインストールディレクトリ
            ],
            "options": {
                "cwd": "${workspaceFolder}/FrontISTR/build" // 作業ディレクトリ
            },
            "dependsOn": [
                "_mkdir",
            ],
        }

    ]
}