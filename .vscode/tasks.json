{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "rmdir",
            "args": ["${workspaceFolder}/FrontISTR/build"]
        },
        {
            "label": "mkdir",
            "type": "shell",
            "command": "mkdir",
            "args": ["${workspaceFolder}/FrontISTR/build"]
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": ["${workspaceFolder}/FrontISTR"],
            "options": {
                "cwd": "${workspaceFolder}/FrontISTR/build" // 作業ディレクトリ
            }
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": ["-j4"],
            "options": {
                "cwd": "${workspaceFolder}/FrontISTR/build"
            }
        },
        {
            "label": "install",
            "type": "shell",
            "command": "make",
            "args": ["install"],
            "options": {
                "cwd": "${workspaceFolder}/FrontISTR/build"
            }
        }
    ]
}