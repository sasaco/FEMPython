{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "step1 cmake",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/FrontISTR/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/core"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "somove",
            "type": "shell",
            "command": "mv ${workspaceFolder}/core/core.cpython-310-x86_64-linux-gnu.so ${workspaceFolder}/core/bin/core.so",
            "dependsOn": [
                "make"
            ]
        }
    ]
}